generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// =====================================
// USER (Clerk-backed)
// =====================================
model User {
  id           String        @id @default(cuid())
  clerkId      String        @unique
  email        String        @unique
  name         String?
  firstName    String?
  lastName     String?
  imageUrl     String?
  projects     Project[]
  alerts       Alert[]
  integrations Integration[]
  postmortems  Postmortem[]
  subscription Subscription?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

// =====================================
// PROJECT
// =====================================
model Project {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  monitors    Monitor[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

// =====================================
// MONITOR
// =====================================
model Monitor {
  id             String       @id @default(cuid())
  projectId      String
  project        Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name           String
  url            String
  method         HttpMethod   @default(GET)
  expectedStatus Int          @default(200)
  frequency      Int // interval in seconds
  isActive       Boolean      @default(true)
  authType       AuthType     @default(NONE)
  authData       Json?
  monitorRuns    MonitorRun[]
  alerts         Alert[]
  postmortems    Postmortem[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([projectId])
  @@index([isActive])
}

// =====================================
// MONITOR RUN (Every interval execution)
// =====================================
model MonitorRun {
  id           String   @id @default(cuid())
  monitorId    String
  monitor      Monitor  @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  statusCode   Int?
  responseTime Int? // milliseconds
  success      Boolean
  message      String?
  createdAt    DateTime @default(now())

  @@index([monitorId])
  @@index([createdAt])
}

// =====================================
// ALERT
// =====================================
model Alert {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  monitorId  String
  monitor    Monitor   @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  type       AlertType @default(EMAIL)
  message    String?
  resolved   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  resolvedAt DateTime?

  @@index([userId])
  @@index([monitorId])
}

// =====================================
// INTEGRATIONS (Slack, Email, etc.)
// =====================================
model Integration {
  id        String          @id @default(cuid())
  userId    String
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      IntegrationType
  config    Json
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@index([userId])
}

// =====================================
// SUBSCRIPTION / PLAN
// =====================================
model Subscription {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan            Plan     @default(FREE)
  status          String   @default("active")
  monitorsLimit   Int      @default(3)
  intervalSeconds Int      @default(60)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// =====================================
// POSTMORTEM
// =====================================
model Postmortem {
  id            String           @id @default(cuid())
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  monitorId     String
  monitor       Monitor          @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  title         String
  rootCause     String
  timeline      Json
  severity      Severity         @default(MINOR)
  status        PostmortemStatus @default(DRAFT)
  summary       String?
  resolution    String?
  writtenBy     String?
  incidentStart DateTime?
  incidentEnd   DateTime?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([monitorId])
  @@index([userId])
}

// =====================================
// ENUMS
// =====================================
enum HttpMethod {
  GET
  POST
  PUT
  PATCH
  DELETE
}

enum AuthType {
  NONE
  HEADER
  BEARER
  BASIC
}

enum AlertType {
  EMAIL
  SLACK
}

enum IntegrationType {
  SLACK
  RESEND_EMAIL
}

enum Severity {
  CRITICAL
  MAJOR
  MINOR
}

enum PostmortemStatus {
  DRAFT
  PUBLISHED
}

enum Plan {
  FREE
  PRO
  TEAM
  ENTERPRISE
}
